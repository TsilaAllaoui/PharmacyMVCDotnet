@model List<Medicine>

<style>
    h1 {
        margin: 2rem 0;
    }

    #list-container {
        display: flex;
        gap: 2rem;
    }

    .medicine-container {
        display: flex;
        flex-direction: column;
        width: 25%;
        border-radius: 5px;
        box-shadow: -1px 2px 6px 2px rgba(152, 150, 150, 0.53);
    }

    .medicine-container>svg {
        border-radius: 5px 5px 0 0;
        width: 100%;
        user-select: none;
    }

    .info {
        width: 100%;
        display: flex;
        align-items: flex-start;
        padding: 0 1rem;
        padding-top: 15px;
        justify-content: space-between;
    }

    .info>p {
        font-weight: 600;
        user-select: none;
    }

    button {
        border-radius: 5px;
        border: none;
        transition: transform 250ms;
        cursor: pointer;
    }

    button:hover {
        transform: translateY(-2px);
    }

    .image {
        background-image: url(https://placehold.co/600x400);
        height: 100%;
        background-size: cover;
        background-repeat: no-repeat;
        border-radius: 5px 5px 0 0;
    }
</style>

<h1>Medicines</h1>
<div id="list-container">
    @foreach (var medicine in Model)
    {
        <div class="medicine-container">
            @if (medicine.Image == "")
            {
                <svg xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail"
                    preserveAspectRatio="xMidYMid slice" focusable="false">
                    <title>Placeholder</title>
                    <rect width="100%" height="100%" fill="#55595c" /><text x="40%" y="50%" fill="#eceeef"
                        dy=".3em">Thumbnail</text>
                </svg>
            }
            else
            {
                <div class="image" style="background-image: @medicine.Image;"></div>
            }
            <div class="info">
                <p>@medicine.Name</p>
                <div>
                    <div>
                        <button>View</button>
                        <button>Edit</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>